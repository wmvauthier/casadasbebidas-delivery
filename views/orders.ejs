<body>

    <!-- Modal Cancel Order -->
    <div id="detailOrderModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="titleDetail" class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <p id="idDetail" style="text-align: left;"></p>
                    <p id="nomeDetail" style="text-align: left;"></p>
                    <p id="contatoDetail" style="text-align: left;"></p>
                    <p id="enderecoDetail" style="text-align: left;"></p>
                    <p id="pontoReferenciaDetail" style="text-align: left;"></p>
                    <p id="formaPagamentoDetail" style="text-align: left;"></p>
                    <p id="valorDetail" style="text-align: left;"></p>
                    <p id="dataHoraDetail" style="text-align: left;"></p>
                    <p id="andamentoDetail" style="text-align: left;"></p>
                    <p style="text-align: left;">
                        <b>Itens:</b><br>
                        <table class="table table-striped table-bordered" style="width:100%; margin-top: 2%;">
                            <thead>
                                <tr>
                                    <th>Qtd</th>
                                    <th>Produto</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody id="itensDetail"></tbody>
                        </table>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Voltar</button>
                </div>
            </div>

        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

        <button class="btn" id="menu-toggle">
            <i class="large material-icons">menu</i>
        </button>

        <div><b>Casa das Bebidas - Delivery System</b></div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

    </nav>

    <div class="d-flex" id="wrapper">

        <div class="bg-light border-right" id="sidebar-wrapper">
            <!-- <div class="sidebar-heading"><b>OBPC - System</b></div> -->
            <div class="list-group list-group-flush">
                <a href="./home" class="list-group-item list-group-item-action bg-light">Home</a>
                <a href="./orders" class="list-group-item list-group-item-action bg-light">Pedidos</a>
                <a href="./products" class="list-group-item list-group-item-action bg-light">Produtos</a>
                <button class="btn btn-danger" data-toggle="modal" data-backdrop="static"
                    data-target="#myModal">Logout</button>
            </div>
        </div>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Logout</h4>
                    </div>
                    <div class="modal-body">
                        <p style="text-align: left;">Deseja mesmo sair do sistema?</p>
                    </div>
                    <div class="modal-footer">
                        <button id="logoutButton" type="button" class="btn btn-danger" data-dismiss="modal">Sim</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Não</button>
                    </div>
                </div>

            </div>
        </div>

        <div id="page-content-wrapper">

            <div class="container-fluid">

                <div id="productDataTable" class="row dataTableRow" style="padding-top:2%;">

                    <div class="col-md-12">

                        <div class="row">
                            <div class="col-10">
                                <h4>Lista de Pedidos</h4>
                            </div>
                            <div class="col-2"></div>
                        </div>

                    </div>

                    <div class=col-md-12>
                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Contato</th>
                                    <th>Status</th>
                                    <th>Data/Hora</th>
                                    <th>Valor</th>
                                    <th style="text-align: center;">Ações</th>
                                </tr>
                            </thead>
                            <tbody id="orderBody"></tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>

    </div>

</body>

