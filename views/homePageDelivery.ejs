      function checkHours() {

         var url = `/usuarios/checkHours`;

         var bool = false;
         var response = httpGet(url);
         var startHour = response.checkHours[0].startHour;
         var endHour = response.checkHours[0].endHour;

         var dat = new Date();
         var userTimezoneOffset = dat.getTimezoneOffset() * 60000;
         var date = new Date(dat.getTime() - userTimezoneOffset);

         var boolStart = false;
         var boolEnd = false;

         if (date.getUTCHours() >= startHour.split(":")[0]) {
            if (date.getUTCHours() == startHour.split(":")[0]) {
               if (date.getUTCMinutes() >= startHour.split(":")[1])
                  boolStart = true;
            } else { boolStart = true; }
         }

         if (date.getUTCHours() <= endHour.split(":")[0]) {
            if (date.getUTCHours() == endHour.split(":")[0]) {
               if (date.getUTCMinutes() <= endHour.split(":")[1])
                  boolEnd = true;
            } else { boolEnd = true; }
         }

         if (boolStart && boolEnd)
            bool = true;

         return bool;

      }

